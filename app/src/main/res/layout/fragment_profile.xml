<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#302f2f">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Welcome"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:textColor="@color/statusBar"
                        android:padding="5dp"/>
                    <TextView
                        android:layout_width="250dp"
                        android:id="@+id/signit"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:padding="5dp"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/statusBar"
                        android:textAlignment="textEnd"/>
                </LinearLayout>




            </LinearLayout>

                    </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending orders:_"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#4118a1"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/pendingor"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:textColor="#302f2f"
                android:text="  My Account"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#fca000"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="  Orders"
            android:drawableRight="@drawable/navigate_next_24"
            android:drawableLeft="@drawable/baseline_menu_24"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/baseline_mail_outline_24"
            android:drawableRight="@drawable/navigate_next_24"
            android:text="  Inbox" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_add_24"
            android:drawableRight="@drawable/navigate_next_24"
            android:layout_margin="10dp"
            android:text="  Saved Items" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/navigate_next_24"
            android:drawableLeft="@drawable/baseline_restore_24"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="  Recently Viewed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#302f2f"
                android:text="  Account Settings"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#fca000"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/personac"
            android:drawableRight="@drawable/navigate_next_24"
            android:layout_margin="10dp"
            android:text="  Details" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:drawableRight="@drawable/navigate_next_24"
            android:layout_margin="10dp"
            android:text="  Address and Location" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_sync_alt_24"
            android:drawableRight="@drawable/navigate_next_24"
            android:layout_margin="10dp"
            android:text="  Change Password" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:drawableRight="@drawable/navigate_next_24"
            android:layout_margin="10dp"
            android:text="  Delete account" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="Log out"/>


    </LinearLayout>



</FrameLayout>